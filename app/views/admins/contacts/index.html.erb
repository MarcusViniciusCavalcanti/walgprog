<% provide(:page_title, t('title.contacts')) %>

<div class="row">
  <div class="col-12">

    <div class="row">
      <div class="col-md-8 col-sm-12">
        <div class="input-group mb-3">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Procurar...">
            <span class="input-group-append">
              <button class="btn btn-outline-info" type="button"><i class="fe fe-search"></i></button>
            </span>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-sm-12">
        <%= link_to new_admins_contact_path, class: 'btn btn-outline-primary btn-block' do %>
          <i class="fe fe-plus mr-2"></i><%= t('title.new_contact') %>
        <% end %>
      </div>

    </div>

    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
            <thead>
              <tr>
                <th><%= t('activerecord.attributes.attribute_commons.name') %></th>
                <th><%= t('activerecord.attributes.attribute_commons.email') %></th>
                <th><%= t('activerecord.attributes.contact.institution') %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @contacts.each do | contact |  %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.email %></td>
                  <td><%= contact.institution.acronym %></td>
                  <td>
                    <%= link_to admins_contact_path(contact), class: 'text-info', title: 'Detalhes' do %>
                      <i class="fe fe-search"></i>
                    <% end %>

                    <%= link_to edit_admins_contact_path(contact), class: 'text-info', title: 'Atualizar' do %>
                      <i class="fe fe-edit"></i>
                    <% end %>

                    <!-- bootbox.js bootboxjs.com -->
                    <%= link_to admins_contact_path(contact),
                                method: :delete,
                                data: { confirm: t('flash.actions.destroy.confirm', resource_name: contact.name) },
                                class: 'text-info', title: 'Remover' do %>
                      <i class="fe fe-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>