<%= simple_form_for([:admins, @contact]) do | f | %>
  <div class="form-row">
    <div class="form-group col-sm-12 col-md-6">
      <%= f.input :name, required: true, autofocus: true %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= f.input :email, required: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-sm-12 col-md-6">
      <%= f.input :phone, required: false, input_html: {class: 'phone'} %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= f.association :institution %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to t('helpers.back'), admins_contacts_path, class: 'btn btn-secondary' %>

    <%= f.button :submit, t('simple_form.buttons.save'), class: 'btn-primary ml-auto' %>
  </div>
<% end %>
