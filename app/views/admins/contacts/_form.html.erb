<%= simple_form_for(@contact, url: path) do | form | %>
  <div class="form-row">
    <div class="form-group col-sm-12 col-md-6">
      <%= form.input :name, required: true, autofocus: true %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.input :email, required: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-sm-12 col-md-6">
      <%= form.input :phone,  required: false %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= form.association :institution %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to t('helpers.back'), admins_contacts_path, class: 'btn btn-secondary' %>

    <%= form.button :submit, t('simple_form.buttons.save'), class: 'btn-primary ml-auto' %>
  </div>
<% end %>
