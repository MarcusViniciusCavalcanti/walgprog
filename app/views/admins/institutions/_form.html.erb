<%= simple_form_for([:admins, @institution]) do |f| %>
  <div class="row">
    <div class="col-lg-8">
      <%= f.input :name %>
    </div>
    <div class="col-lg-4">
      <%= f.input :acronym %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :state_id, collection: @states,
                  prompt: t('prompt.select.m', name: t('activerecord.attributes.institution.state')),
                  label_method: :name, value_method: :id %>
    </div>
    <div class="col-lg-8">
      <%= f.input :city_id, collection: @cities,
                  prompt: t('prompt.select.f', name: t('activerecord.attributes.institution.city')),
                  label_method: :name, value_method: :id %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="d-flex">
        <%= link_to admins_institutions_path, class: 'btn btn-secondary float-left', active: :exclusive do %>
          <%= t('helpers.back') %>
        <% end %>
        <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
      </div>
    </div>
  </div>
<% end %>
