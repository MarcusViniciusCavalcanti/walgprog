<%= simple_form_for([:admins, @institution]) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-lg-8">
      <%= f.input :name %>
    </div>
    <div class="col-lg-4">
      <%= f.input :acronym %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :state_id, collection: @states,
                  prompt: t('prompt.select.m'),
                  label_method: :name, value_method: :id %>
    </div>
    <div class="col-lg-8">
      <%= f.input :city_id, collection: @cities,
                  prompt: t('prompt.select.f'),
                  label_method: :name, value_method: :id %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
    </div>

  </div>
<% end %>