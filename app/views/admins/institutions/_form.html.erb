<%= simple_form_for([:admins, @institution]) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-lg-8">
      <%= f.input :name %>
    </div>
    <div class="col-lg-4">
      <%= f.input :acronym %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :state_id, collection: @states,
                  prompt: 'Escolha o estado',
                  label_method: :name, value_method: :id %>

      <%#= f.input :state, collection: @states, prompt: 'Escolha o estado', selected: @institution.city.state.id, input_html: { class: 'selectize' } %>
    </div>
    <div class="col-lg-8">
      <%= f.input :city_id, collection: @cities,
                  prompt: 'Selecione um cidade',
                  label_method: :name, value_method: :id %>
    </div>

    <%#= f.input :city, collection: @cities, prompt: 'Selecione um estado', selected: @institution.city.id, input_html: { name: 'institution[city_id]', class: 'selectize' }%>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
    </div>

  </div>
<% end %>