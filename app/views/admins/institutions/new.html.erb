<% provide(:head_title, 'Cadastrar Instituição de Ensino') %>
<% provide(:page_title, 'Cadastrar Instituição de Ensino') %>
<% provide(:title, 'Cadastrar Instituição de Ensino') %>


<%= simple_form_for([:admins, @institution]) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-lg-8">
      <%= f.input :name %>
    </div>
    <div class="col-lg-4">
      <%= f.input :acronym %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :state, collection: @states, prompt: 'Escolha o estado' %>
    </div>
    <div class="col-lg-8">
      <%= f.input :city, collection: [], prompt: 'Selecione uma cidade', input_html: {name: 'institution[city_id]'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
    </div>

  </div>
<% end %>
