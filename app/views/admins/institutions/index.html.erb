<% provide(:head_title, 'Instituições de Ensino') %>
<% provide(:page_title, 'Instituições de Ensino') %>
<% provide(:title, 'Instituições de Ensino') %>

<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"></h3>
      <div class="col-lg-8">
        <div class="form-group">
          <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Procurar..." aria-label="Procurar..." aria-describedby="search">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="button" id="search"><i class="fe fe-search"></i></button>
            </div>
          </div>

        </div>
      </div>
      <div class="col-lg-4">

        <%= link_to "+ Nova Instituição", new_admins_institution_path, class: "btn btn-outline-primary btn-block mb-4"  %>

      </div>
    </div>
    <div class="table-responsive">
      <table class="table card-table table-striped table-vcenter">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Sigla</th>
          <th>Cidade</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
          <% @institutions.each do |institution| %>
        <tr>
          <td><%= institution.name %></td>
          <td><%= institution.acronym %></td>
          <td class="text-nowrap"><%= institution.city.name %></td>
          <td class="text-nowrap"><%= institution.city.state.acronym %></td>
          <td class="w-1"><%= link_to '<i class="fe fe-edit"></i>'.html_safe, edit_admins_institution_path(institution) %></td>
          <td class="w-1"><%= link_to '<i class="fe fe-trash"></i>'.html_safe, admins_institution_path(institution),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
