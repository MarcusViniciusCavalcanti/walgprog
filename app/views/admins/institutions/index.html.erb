<% provide(:head_title, 'Instituições de Ensino') %>
<% provide(:page_title, 'Instituições de Ensino') %>
<% provide(:title, 'Instituições de Ensino') %>

<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-md-8 col-sm-12">
        <div class="input-group mb-3">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Procurar...">
            <span class="input-group-append">
              <button class="btn btn-outline-info" type="button"><i class="fe fe-search"></i></button>
            </span>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-12">
        <%= link_to "+ Nova Instituição", new_admins_institution_path, class: "btn btn-outline-primary btn-block" %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table card-table table-striped table-vcenter">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Sigla</th>
          <th>Cidade</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @institutions.each do |institution| %>
          <tr>
            <td><%= institution.name %></td>
            <td><%= institution.acronym %></td>
            <td class="text-nowrap"><%= institution.city.name %></td>
            <td class="text-nowrap"><%= institution.city.state.acronym %></td>
            <td>
              <div class="btn-group">

                <%= link_to '<i class="fe fe-edit"></i>'.html_safe, edit_admins_institution_path(institution), :title => "Editar" %>

                <%= link_to '<i class="fe fe-trash"></i>'.html_safe, admins_institution_path(institution),
                            method: :delete,
                            data: {confirm: 'Deseja remover?'}, :title => "Deletar" %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
