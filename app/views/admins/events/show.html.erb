<% provide(:head_title, t("events.index")) %>
<% provide(:page_title, t('events.index')) %>
<% provide(:title, t('events.index')) %>
<% navigation_add t('events.show'), admins_event_path %>

<div class="col-md-12 card-body">
  <%= link_to edit_admins_event_path(@event.id), class: 'btn btn-warning float-right', active: :exclusive do %>
    <i class="fa fa-edit"></i>
    <%= t('helpers.edit') %>
  <% end %>
  <fieldset class="form-fieldset col-md-12">
    <legend class="w-auto"><%= t('events.description') %></legend>
    <div class="row">
      <div class="col-md-6">
        <h4><%= t('events.name') %></h4>
        <p><%= @event.name %> (<%= @event.initials %>)</p>
      </div>
      <div class="col-md-3">
        <h4><%= t('activerecord.attributes.event.color') %></h4>
        <p><i class="fas fa-circle" style="color: <%= @event.color %>"></i></p>
      </div>
      <div class="col-md-3">
        <h4><%= t('activerecord.attributes.attribute_commons.created_at') %></h4>
        <p><%= l(@event.created_at, format: :default) %></p>
      </div>
    </div>
  </fieldset>

  <fieldset class="form-fieldset col-md-12">
    <legend class="w-auto"><%= t('events.dates') %></legend>
    <div class="row">
      <div class="col-md-6">
        <h4><%= t('activerecord.attributes.event.beginning_date') %></h4>
        <p><%= l(@event.beginning_date, format: :default) %></p>
      </div>

      <div class="col-md-6">
        <h4><%= t('activerecord.attributes.event.end_date') %></h4>
        <p><%= l(@event.end_date, format: :default) %></p>
      </div>
    </div>
  </fieldset>

  <fieldset class="form-fieldset col-md-12">
    <legend class="w-auto"><%= t('events.location') %></legend>
    <div class="row">
      <div class="col-md-6">
        <h4><%= t('events.location') %></h4>
        <p><%= @event.full_address %></p>
      </div>
      <div class="col-md-6">
        <h4><%= t('activerecord.attributes.event.local') %></h4>
        <p><%= @event.local %></p>
      </div>

    </div>
  </fieldset>
  <%= link_to admins_events_path, class: 'btn btn-secondary float-left', active: :exclusive do %>
    <%= t('helpers.back') %>
  <% end %>
</div>

