<%= simple_form_for(@institution, url: institutions_path()) do | f | %>
  <div class="card-header">
    <h1 class="page-title mb-3">
      Instituição de Ensino
    </h1>
  </div>
  <div class="card-body">
  <%= f.input :name %>
  <%= f.input :acronym %>
  <%= f.input :state_id, collection: @states,
                  prompt: t('prompt.select.m', name: t('activerecord.attributes.institution.state')),
                  label_method: :name, value_method: :id,
                  input_html: { autocomplete: 'false' } %>
  <%= f.input :city_id, collection: @cities,
                  prompt: t('prompt.select.f', name: t('activerecord.attributes.institution.city')),
                  label_method: :name, value_method: :id,
                  input_html: { autocomplete: 'false' } %>
  </div>

    <div class="row">
      <div class="col-6">
        <%= link_to t('helpers.back'), root_path, class: 'btn btn-secondary mr-7' %>
      </div>
      <div class="col-6">
        <%= f.button :submit, class: 'btn-primary ml-auto' %>
      </div>
    </div>

<% end %>
